{
  "name": "vehicle-inventory-system",
  "version": "1.0.0",
  "description": "Vehicle Parts Inventory Management System",
  "main": "electron/main.js",
  "scripts": {
    "start": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000 && npm run electron-start\"",
    "react-start": "cross-env BROWSER=none react-scripts start",
    "electron-start": "electron .",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-pack": "electron-builder --publish never",
    "electron-pack:win": "electron-builder --win --publish never",
    "electron-pack:mac": "electron-builder --mac --publish never",
    "electron-pack:linux": "electron-builder --linux",
    "dist": "npm run build && npm run electron-pack",
    "dist:all": "npm run build && npm run electron-pack -- -mwl",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "inventory",
    "management",
    "vehicle",
    "parts"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "node-notifier": "^10.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1",
    "react-router-dom": "^6.8.0",
    "recharts": "^2.4.3",
    "sqlite3": "^5.1.4",
    "tailwindcss": "^3.2.4"
  },
  "devDependencies": {
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "electron-rebuild": "^3.2.9",
    "react-scripts": "5.0.1",
    "wait-on": "^7.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.autopartspro.inventory",
    "productName": "AutoParts Pro",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json",
      "!**/*.map",
      "!**/src/*",
      "!**/test/*"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office",
      "icon": "build/icons"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
